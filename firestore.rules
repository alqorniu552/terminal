
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Anyone authenticated can read missions, nobody can write from client
    match /missions/{missionId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Users can only read/write their own progress
    match /user-progress/{userId} {
      allow read, create, update: if request.auth.uid == userId;
    }

    // Anyone can read the full leaderboard.
    // Users can only update their own score.
    // A 'get' is allowed on individual documents for the batch write to work.
    match /leaderboard/{userId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Missions are public to read for any authenticated user, but not writable from the client
    match /missions/{missionId} {
        allow read: if request.auth != null;
        allow write: if false;
    }
    
    // User can read, create, and update their own progress document
    match /user-progress/{userId} {
      allow read: if request.auth.uid == userId;
      allow create, update: if request.auth.uid == userId;
    }
    
    // Leaderboard is public to read, but users can only update their own score.
    match /leaderboard/{userId} {
        allow read: if request.auth != null;
        allow create, update: if request.auth.uid == userId;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isRoot() {
      return request.auth.token.email == "alqorniu552@gmail.com";
    }

    // Publicly readable collections
    match /missions/{missionId} {
      allow read: if true;
      allow write: if false; // Data should be seeded manually, not from client
    }
    
    match /leaderboard/{userId} {
      allow read: if true;
      allow write: if isAuth() && isOwner(userId);
    }
    
    // User-specific data
    match /users/{userId} {
      allow read: if isAuth() && (isOwner(userId) || isRoot());
      allow write: if isAuth() && isOwner(userId);
      allow create: if isAuth() && isOwner(userId);
    }
    
    match /user-progress/{userId} {
       allow read: if isAuth() && (isOwner(userId) || isRoot());
       allow write: if isAuth() && isOwner(userId);
       allow create: if isAuth() && isOwner(userId);
    }
  }
}
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isRoot() {
      // IMPORTANT: Replace this with the actual UID of the root user from Firebase Authentication.
      let rootUid = "TBD"; 
      return request.auth != null && request.auth.uid == rootUid;
    }

    // Standard users can only read/write their own document.
    // The root user can list all users.
    match /users/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isRoot();
      allow write: if request.auth != null && request.auth.uid == userId;
      allow list: if isRoot();
    }

    // Missions are public to all authenticated users for reading.
    match /missions/{missionId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // A user can manage their own progress document.
    match /user-progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone authenticated can read the leaderboard.
    // A user can manage their own entry.
    match /leaderboard/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

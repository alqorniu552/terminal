rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Missions are public to all authenticated users for reading.
    // No one can write to them from the client-side.
    match /missions/{missionId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // A user can create, read, and update their own progress document.
    match /user-progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone authenticated can read the leaderboard.
    // A user can create or update their own entry in the leaderboard.
    match /leaderboard/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

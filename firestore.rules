rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, update, write: if request.auth != null && request.auth.uid == userId;
    }

    // Any authenticated user can read the missions. No one can write from the client.
    match /missions/{missionId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // A user can read and update their own progress.
    match /user-progress/{userId} {
        allow read, write, create: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone can read the leaderboard. Only server logic should update scores.
    // For this app's purpose, we allow authenticated users to update their own score.
    match /leaderboard/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
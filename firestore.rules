rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Missions and leaderboard are public
    match /missions/{missionId} {
      allow read: if true;
      allow write: if false; // Nobody can write to missions from the client
    }

    match /leaderboard/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId; // Only users can update their own score
    }

    // Users can only read/write their own documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /user-progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
